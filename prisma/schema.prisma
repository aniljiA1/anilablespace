generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  products  Product[]
  createdAt DateTime @default(now())
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Int
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  reviews     Review[]
  createdAt   DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  productId String
  product   Product @relation(fields: [productId], references: [id])
}

model ViewHistory {
  id        String   @id @default(uuid())
  productId String
  viewedAt  DateTime @default(now())
}
